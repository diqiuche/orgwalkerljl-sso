<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" 
	id="WebApp_ID" version="3.0">
	<display-name>orgwalkerljl-sso</display-name>
	<!-- 加载springMVC配置 -->
	<servlet>
		<servlet-name>dispatcherServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath*:sso-web.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>dispatcherServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	<!--
		浏览器不支持put,delete等method,由该HiddenHttpMethodFilter将xxx?_method=delete 或 xxx?_method=put 转换为标准的
		http delete、put 方法
	-->
	<filter>
		<filter-name>HiddenHttpMethodFilter</filter-name>
		<filter-class>org.springframework.web.filter.HiddenHttpMethodFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>HiddenHttpMethodFilter</filter-name>
		<servlet-name>dispatcherServlet</servlet-name>
	</filter-mapping>
	
	<!-- Remoting service -->
	<servlet>
		<servlet-name>remotingServiceServlet</servlet-name>
		<servlet-class>org.walkerljl.sso.remoting.SpringHessianRemotingServer</servlet-class>
		<init-param>
			<param-name>remotingServicePackageName</param-name>
			<param-value>org.walkerljl.sso.sdk</param-value>
		</init-param>
		<init-param>
			<param-name>integrateOtherIocContainer</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>remotingServiceAddressPrefix</param-name>
			<param-value>/openservice</param-value>
		</init-param>
		<init-param>
			<param-name>remotingServiceImplPackageName</param-name>
			<param-value>org.walkerljl.sso.service.sdk.impl</param-value>
		</init-param>
		<load-on-startup>2</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>remotingServiceServlet</servlet-name>
		<url-pattern>/openservice/*</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>/</welcome-file>
	</welcome-file-list>
</web-app>