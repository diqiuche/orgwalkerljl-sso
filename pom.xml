<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.walkerljl.sso</groupId>
	<artifactId>orgwalkerljl-sso</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>pom</packaging>

	<modules>
		<module>orgwalkerljl-sso-common</module>
		<module>orgwalkerljl-sso-domain</module>
		<module>orgwalkerljl-sso-dao</module>
		<module>orgwalkerljl-sso-service</module>
		<module>orgwalkerljl-sso-web</module>
		<module>orgwalkerljl-sso-sdk</module>
	</modules>

	<profiles>
		<profile>
			<id>local</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<!-- db -->
				<db.ip>127.0.0.1:3306</db.ip>
				<db.name>sso_dev</db.name>
				<db.username>root</db.username>
				<db.password>123456</db.password>
				
				<static.resource.address>//dev.walkerljl.org/static</static.resource.address>

				<!-- log -->
				<log.name>sso</log.name>
				<log.level>debug</log.level>
				<log.file.name>/export/Logs/local.sso.walkerljl.org/sso.log</log.file.name>
				
				<!-- sso -->
				<sso.auth.cookie.domain>.walkerljl.org</sso.auth.cookie.domain>
				<sso.auth.cookie.name>local.sso.walkerljl.org</sso.auth.cookie.name>
				<sso.auth.cookie.key>e4a52c13-9ec9-4353-826e-175660679c99</sso.auth.cookie.key>
				<sso.auth.address>//local.walkerljl.org:8080/sso/login</sso.auth.address>
				<sso.return.address>//local.walkerljl.org:8080/sso</sso.return.address>
			</properties>
		</profile>
		
		<profile>
			<id>dev</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<properties>
				<!-- db -->
				<db.ip>127.0.0.1:3306</db.ip>
				<db.name>sso_dev</db.name>
				<db.username>root</db.username>
				<db.password>123456</db.password>
				
				<static.resource.address>//dev.walkerljl.org/static</static.resource.address>

				<!-- log -->
				<log.name>sso</log.name>
				<log.level>debug</log.level>
				<log.file.name>/export/Logs/dev.sso.walkerljl.org/sso.log</log.file.name>
				
				<!-- sso -->
				<sso.auth.cookie.domain>.walkerljl.org</sso.auth.cookie.domain>
				<sso.auth.cookie.name>dev.sso.walkerljl.org</sso.auth.cookie.name>
				<sso.auth.cookie.key>e4a52c13-9ec9-4353-826e-175660679c99</sso.auth.cookie.key>
				<sso.auth.address>//dev.walkerljl.org/sso/login</sso.auth.address>
				<sso.return.address>//dev.walkerljl.org/sso</sso.return.address>
			</properties>
		</profile>
		
		<profile>
			<id>product</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<properties>
				<!-- db -->
				<db.ip>127.0.0.1:3306</db.ip>
				<db.name>sso_dev</db.name>
				<db.username>root</db.username>
				<db.password>123456</db.password>
				
				<static.resource.address>//walkerljl.oicp.net/static</static.resource.address>

				<!-- log -->
				<log.name>sso</log.name>
				<log.level>info</log.level>
				<log.file.name>/export/Logs/sso.walkerljl.org/sso.log</log.file.name>
				
				<!-- sso -->
				<sso.auth.cookie.domain>.walkerljl.oicp.net</sso.auth.cookie.domain>
				<sso.auth.cookie.name>sso.walkerljl.oicp.net</sso.auth.cookie.name>
				<sso.auth.cookie.key>e4a52c13-9ec9-4353-826e-175660679c99</sso.auth.cookie.key>
				<sso.auth.address>//walkerljl.oicp.net/sso/login</sso.auth.address>
				<sso.return.address>//walkerljl.oicp.net/sso</sso.return.address>
			</properties>
		</profile>
	</profiles>

	<properties>
		<jdk.version>1.8</jdk.version>
		<spring.version>3.1.1.RELEASE</spring.version>
		<orgwalkerljl.commons.version>0.0.1-SNAPSHOT</orgwalkerljl.commons.version>
		<orgwalkerljl.remoting.version>0.0.1-SNAPSHOT</orgwalkerljl.remoting.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>2.4</version>
					<configuration>
						<source>${jdk.version}</source>
						<target>${jdk.version}</target>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

	<dependencyManagement>
		<dependencies>
			<!-- orgwalkerljl commons -->
			<dependency>
				<groupId>org.walkerljl.commons</groupId>
				<artifactId>orgwalkerljl-commons-core</artifactId>
				<version>${orgwalkerljl.commons.version}</version>
			</dependency>
			<dependency>
				<groupId>org.walkerljl.commons</groupId>
				<artifactId>orgwalkerljl-commons-log</artifactId>
				<version>${orgwalkerljl.commons.version}</version>
			</dependency>
			<dependency>
				<groupId>org.walkerljl.commons</groupId>
				<artifactId>orgwalkerljl-commons-domain</artifactId>
				<version>${orgwalkerljl.commons.version}</version>
			</dependency>
			<dependency>
				<groupId>org.walkerljl.commons</groupId>
				<artifactId>orgwalkerljl-commons-dao</artifactId>
				<version>${orgwalkerljl.commons.version}</version>
			</dependency>
			<dependency>
				<groupId>org.walkerljl.commons</groupId>
				<artifactId>orgwalkerljl-commons-service</artifactId>
				<version>${orgwalkerljl.commons.version}</version>
			</dependency>
			<dependency>
				<groupId>org.walkerljl.commons</groupId>
				<artifactId>orgwalkerljl-commons-mvc</artifactId>
				<version>${orgwalkerljl.commons.version}</version>
			</dependency>
			<dependency>
				<groupId>org.walkerljl.commons</groupId>
				<artifactId>orgwalkerljl-commons-mail</artifactId>
				<version>${orgwalkerljl.commons.version}</version>
			</dependency>
			
			<dependency>
				<groupId>org.walkerljl.remoting</groupId>
				<artifactId>orgwalkerljl-remoting-sdk</artifactId>
				<version>${orgwalkerljl.remoting.version}</version>
			</dependency>
			<dependency>
				<groupId>org.walkerljl.remoting</groupId>
				<artifactId>orgwalkerljl-remoting-provider-hessian</artifactId>
				<version>${orgwalkerljl.remoting.version}</version>
			</dependency>
			
			<dependency>
				<groupId>javax.servlet</groupId>
				<artifactId>servlet-api</artifactId>
				<version>2.5</version>
				<scope>provided</scope>
			</dependency>

			<dependency>
				<groupId>com.jolbox</groupId>
				<artifactId>bonecp</artifactId>
				<version>0.7.1.RELEASE</version>
			</dependency>
			<dependency>
				<groupId>mysql</groupId>
				<artifactId>mysql-connector-java</artifactId>
				<version>5.1.19</version>
			</dependency>
		</dependencies>
	</dependencyManagement>
</project>