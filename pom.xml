<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.walkerljl.sso</groupId>
	<artifactId>orgwalkerljl-sso</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>pom</packaging>

	<modules>
		<module>orgwalkerljl-sso-common</module>
		<module>orgwalkerljl-sso-domain</module>
		<module>orgwalkerljl-sso-dao</module>
		<module>orgwalkerljl-sso-service</module>
		<module>orgwalkerljl-sso-web</module>
		<module>orgwalkerljl-sso-sdk</module>
	</modules>

	<profiles>
		<profile>
			<id>local</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<!-- db -->
				<db.ip>127.0.0.1:3306</db.ip>
				<db.name>sso_dev</db.name>
				<db.username>root</db.username>
				<db.password>123456</db.password>

				<!-- log -->
				<log.name>sso</log.name>
				<log.level>debug</log.level>
				<log.file.name>/export/Logs/local.sso.walkerljl.org/sso.log</log.file.name>
			</properties>
		</profile>
	</profiles>

	<properties>
		<jdk.version>1.8</jdk.version>
		<spring.version>3.1.1.RELEASE</spring.version>
		<orgwalkerljl.commons.version>0.0.1-SNAPSHOT</orgwalkerljl.commons.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>2.4</version>
					<configuration>
						<source>${jdk.version}</source>
						<target>${jdk.version}</target>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-war-plugin</artifactId>
					<version>2.2</version>
				</plugin>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>cobertura-maven-plugin</artifactId>
					<version>2.5.2</version>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

	<dependencyManagement>
		<dependencies>
			<!-- orgwalkerljl commons -->
			<dependency>
				<groupId>org.walkerljl.commons</groupId>
				<artifactId>orgwalkerljl-commons-core</artifactId>
				<version>${orgwalkerljl.commons.version}</version>
			</dependency>
			<dependency>
				<groupId>org.walkerljl.commons</groupId>
				<artifactId>orgwalkerljl-commons-log</artifactId>
				<version>${orgwalkerljl.commons.version}</version>
			</dependency>
			<dependency>
				<groupId>org.walkerljl.commons</groupId>
				<artifactId>orgwalkerljl-commons-domain</artifactId>
				<version>${orgwalkerljl.commons.version}</version>
			</dependency>
			<dependency>
				<groupId>org.walkerljl.commons</groupId>
				<artifactId>orgwalkerljl-commons-dao</artifactId>
				<version>${orgwalkerljl.commons.version}</version>
			</dependency>
			<dependency>
				<groupId>org.walkerljl.commons</groupId>
				<artifactId>orgwalkerljl-commons-service</artifactId>
				<version>${orgwalkerljl.commons.version}</version>
			</dependency>
			<dependency>
				<groupId>org.walkerljl.commons</groupId>
				<artifactId>orgwalkerljl-commons-mvc</artifactId>
				<version>${orgwalkerljl.commons.version}</version>
			</dependency>

			<dependency>
				<groupId>org.aspectj</groupId>
				<artifactId>aspectjweaver</artifactId>
				<version>1.7.2</version>
			</dependency>
			<dependency>
				<groupId>com.jolbox</groupId>
				<artifactId>bonecp</artifactId>
				<version>0.7.1.RELEASE</version>
			</dependency>
		</dependencies>
	</dependencyManagement>
</project>